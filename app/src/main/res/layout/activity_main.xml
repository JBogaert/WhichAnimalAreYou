<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jb_dev.whichanimalareyou.View.MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="How much do you agree with the following statement about yourself?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:id="@+id/textView2"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        tools:textSize="20sp"
        android:textColor="@android:color/background_light"/>

    <Button
        android:text="Next Question"
        android:id="@+id/button"
        tools:text="Next Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/buttonStyle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"

        android:layout_marginBottom="80dp"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How much do you like to eat bananas?"
        android:id="@+id/textView"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/background_light"
        android:foregroundGravity="center_horizontal"
        android:layout_above="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="120dp"/>
</RelativeLayout>
